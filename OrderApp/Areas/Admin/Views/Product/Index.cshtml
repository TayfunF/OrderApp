@model IEnumerable<Product>

@{
    ViewData["Title"] = "Ürünler Listesi";
}


<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Ürünler Listesi</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Product" asp-action="CreateOrUpdate" class="btn btn-primary ">
                <span>Yeni Ürün Ekle</span>
            </a>
        </div>
    </div>
    <div class="row">
        <table class="table table-bordered table-striped my-2">
            <thead>
                <tr>
                    <th>
                        Ürün Resmi
                    </th>
                    <th>
                        Ürün Adı
                    </th>
                    <th>
                        Ürün Fiyatı
                    </th>
                    <th>
                        İşlemler
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td><img src="@product.Picture" style="width:75px;"></td>
                        <td>@product.Name</td>
                        <td>@product.Price ₺</td>
                        <td>
                            <a asp-controller="Product" asp-action="CreateOrUpdate" asp-route-id="@product.Id" class="btn btn-success">
                                Güncelle
                            </a>

                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">
                                Sil
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



