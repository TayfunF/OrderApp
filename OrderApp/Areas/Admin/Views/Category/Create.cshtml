@model Category

@{
    ViewData["Title"] = "Kategori Ekleme";
}

<form method="post">

    <h2>Yeni Kategori Ekleme Formu</h2>
    <div class="row">
        <label asp-for="Name">Kategori Adı</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="row my-2">
        <div class="col-6">
            <button type="submit" class="btn btn-success">
                Ekle
            </button>
        </div>
        <div class="col-6"><a asp-controller="Category" asp-action="Index" class="btn btn-primary"> Geri Dön  </a></div>
    </div>
</form>

